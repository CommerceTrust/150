.splash-page
  background-color sand

.header
  background-color white
  display table
  overflow hidden
  padding 1rem 2rem
  width 100%

  +below(550px)
    display block

  &__logo--col-4-12
    width 20%

    +tablet()
      width 50%

    +below(550px)
      width 70%

  &__social-nav--col-8-12
    text-align right

    a:not(:first-child)
      padding-left 1em

    +tablet()
      display inline-block
      width 100%

    +below(550px)
      display inline-block
      text-align center
      width 100%

  .hide-on-mobile
    +below(550px)
      display none

.banner-splash
  background url('img/Commerce_150_hero-1.jpg') no-repeat center center
  background-size cover
  height 350px
  width 100%

  +tablet()
    height 250px

  +below(650px)
    height 150px

.main
  background-color sand
  //display table
  padding-top 1.5rem
  width 100%

  //&__container

  &__sidebar-content--col-2-12
    padding 0 1rem
    vertical-align top

    a
      padding-bottom 14px

    +below(890px)
      width 40%

    +below(690px)
      display block
      width 100%

  &__sidebar-media
    text-align center
    p
      +below(690px)
        display inline-block
        width 60%
      +below(400px)
        display inline-block
        width 100%

  &__content--col-6-12
    padding 0 1rem

    +below(890px)
      width 60%

    +below(690px)
      display block
      width 100%

  &__heading
    color green
    font-size 2rem

    +below(550px)
      line-height 1

    +below(450px)
      text-align center

    span
      +below(725px)
        display inline-block

  &__button
    border 2px solid green
    color green
    display inline-block
    padding.5rem 1rem
    text-align center
    width 100%

    &:hover
      background-color green
      color slate
      text-decoration: none
