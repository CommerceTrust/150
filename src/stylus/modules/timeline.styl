@charset "utf-8";
.dsk-not-supported,.dsk-supported
  background dirt
  background-size 100% 100%

.dsk-not-supported
  color #fff
  text-shadow 1px 1px 0px rgba(0,0,0,.2)
  padding 1px 0
  .step
    width 800px
    margin 20px auto
    background rgba(0,0,0,.2)
    padding 20px
    border-radius 5px

  .year
    background none
    padding 0
    filter none
    _filter none

  .dsk-titlenode
    width 100px
    border 5px
    background #09C
    text-align center
    font-size 24px
    height 36px
    line-height 36px
    margin-left -20px
    border-radius 5px
    box-shadow 1px 1px 2px rgba(0,0,0,.1)
    margin-bottom 10px

  .dsk-info
    padding-bottom 20px

    h2
      display none

  .dsk-link
    margin-top 15px
    text-decoration none
    background rgba(255,255,255,.3)
    box-shadow 0 1px rgba(255, 255, 255, 0.15) inset
    border none
    padding 6px 10px
    border-radius 3px
    display inline-block
    color #fff
    font-size 14px

  .dsk-circle
    font-size 36px
    color rgba(255,255,255,.8)
    text-shadow 1px 1px 1px rgba(0,0,0,.2)

  .dsk-circle-title
    font-size 24px
    margin 20px 0 15px 0

.dsk-supported
  position relative
  width 100%
  min-width 100px
  margin 0 auto
  height 550px
  overflow hidden

  .dsk-linewrapper
    height 2rem
    bottom 20%
    width 100%
    background rgba(255,255,255,.3)
    box-shadow 0 1px rgba(255, 255, 255, 0.15) inset
    position absolute
    bottom 20%
    color #fff

  .dsk-wrapper
    outline none
    overflow visible !important

  .dsk-circle
    -moz-user-select none
    -webkit-user-select none
    -ms-user-select none
    user-select none
    cursor pointer
    width 40px
    height 40px
    //border 4px solid rgba(255,255,255,1)
    background #444
    border-radius 50%
    line-height 40px
    text-align center
    font-size 12px
    color #fff
    box-shadow 0 0 2px rgba(0,0,0,.1)
    transition all 0.5s ease-in
    position relative

  .active
    .dsk-circle
      background #F60
      background-clip padding-box
      width 56px
      height 56px
      line-height 56px
      font-size 16px

    .dsk-titlenode
      margin-top -140px
      text-shadow 2px 2px 2px rgba(0,0,0,.2)

    .dsk-circle-title
      width 300px
      transform rotate(0deg)
      left -118px
      top -28px
      font-size 16px
      font-weight normal
      text-shadow 1px 1px 1px rgba(0,0,0,.3)

    .dsk-content
      opacity 1
      transform scale(1)
      transition all 1s ease-in-out .5s

    .dsk-link
      opacity 1
      transform translateY(0px)

  .dsk-titlenode
    font-size 88px
    margin-top -88px
    cursor pointer
    transition all 1s ease-in .5s

  .step
    width 400px
    position relative

  .dsk-circle-title
    text-shadow 1px 1px 0px rgba(0,0,0,.2)
    width 100px
    text-align center
    transform rotate(-45deg)
    position absolute
    top 70px
    margin 0
    padding 0
    font-weight 300
    color #fff
    left -84px
    line-height 1.2em
    font-size 12px
    transition all 0.6s ease-in-out 0.5s

  .dsk-nav
    position absolute
    height 32px
    top 10px
    right 10px

    span
      display inline-block
      width 30px
      height 30px
      background url(/img/prev.png) no-repeat center center rgba(255,255,255,.3)
      cursor pointer
      border-radius 3px
      box-shadow 0 1px rgba(255, 255, 255, 0.25) inset
      margin 0 1px
      transition background-color 0.3s ease-in

      &:hover
        background-color rgba(255,255,255,.5)

    .dsk-pre
      border-radius 3px 0 0 3px

    .dsk-next
      border-radius 0 3px 3px 0
      background-image url(/img/next.png)
      margin-right 20px

    .dsk-autoplay
      background-image url(/img/play.png)

    .playing
      background-image url(/img/pause.png)

  .dsk-content
    position absolute
    top -350px
    height 300px
    width 800px
    left -200px
    opacity 0
    transition all 0.5s ease-in
    transform scale(0.5)

    & > img
      max-width 256px
      max-height 300px
      position absolute
      right 0px
      top 0px

  .dsk-info
    width 450px
    text-shadow 2px 2px 2px rgba(0,0,0,.2)

    h2
      margin 0 0 20px 0
      font-weight normal
      font-size 30px

    p
      line-height 1.8em
      font-size 15px
      margin 0

  .dsk-link
    margin-top 15px
    color #fff
    text-decoration none
    background rgba(255,255,255,.3)
    box-shadow 0 1px rgba(255, 255, 255, 0.15) inset
    border none
    font-size 14px
    padding 6px 10px
    border-radius 3px
    display inline-block
    transition all 1s ease-in-out 1s
    opacity 0
    transform translateY(30px)

  .dsk-year-info
    font-size 24px
    padding 10px

.dsk-fullscreen
  width 100%
  height 100%


@media screen, (max-width: 650px)
  .dsk-supported
    height 400px
