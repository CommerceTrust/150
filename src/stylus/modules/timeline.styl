// Timeline transition
fade = all 1s ease-in

html
  overflow-x hidden

.timeline
  position relative
  overflow-x hidden

  // Welcome slide content changes on mobile/not-mobile.
  #step-0
    p
      display block
      +mobile()
        display none

    .mobile-content
      display none
      +mobile()
        display block

  #back-to-top
    bottom 0px
    color darkgreen
    display block
    padding 0.5em
    position fixed
    right 0px

    +desktop()
      display none

  .read-more-link
    pointer-events all // Make sure we can click it!
    color darkgreen

    &:hover
      color nightgreen

  .overlay
    position absolute
    width 100%
    height 100%
    background black
    opacity 0.5
    z-index 2
    display none

#timeline-header
  z-index 3

  +mobile()
    padding 1em

    .header__logo--col-4-12
      display inline-block
      float left
      vertical-align super
      position absolute
      width 70%

      &.move
        opacity 0.5

    .header__social-nav--col-8-12
      display inline-block
      position relative
      float right
      text-align right
      width 80%
      z-index 3

    .social
      display none

    #toggle.move
      margin-right 185px

#dasky.move
  opacity 0.5

/*----------------------------------------------------------------*
 * Timeline Styles
 *----------------------------------------------------------------*/
.dsk-not-supported, .dsk-supported
  background dirt
  background radial-gradient(ellipse at center, #c9c190 0%, dirt 55%, #89825c 100%);
  background-size 100% 100%
  color content-color

  .date__heading,
  p
    color content-color

/*----------------------------------------------------------------*
 * Fallback/Mobile Dasky Styles
 *----------------------------------------------------------------*/
.dsk-not-supported
  padding 1px 0

  .step
    width 100%
    margin 20px auto
    padding 20px

  .dsk-circle-date
    background none
    padding 0
    filter none
    _filter none
    font-family: Serif.font
    font-weight: Serif.weight.normal

  .dsk-info
    padding-bottom 0

  .dsk-circle-date
    display none

  .date__heading
    color content-color

/*----------------------------------------------------------------*
 * Dasky Timeline Styles
 *----------------------------------------------------------------*/
.dsk-supported
  height 550px
  margin 0 auto
  min-width 100px
  overflow hidden
  position relative
  width 100%

  // Timeline bar
  .dsk-linewrapper
    background rgba(255,255,255,.3)
    bottom 20%
    box-shadow 0 1px rgba(255, 255, 255, 0.15) inset
    color timeline-bg
    height 6rem
    position absolute
    width 100%

  .dsk-wrapper
    outline none
    overflow visible !important

  // Default timeline dot (inactive)
  .dsk-circle
    background not-active-color
    border-radius 50%
    box-shadow 0 0 2px rgba(0,0,0,0.1)
    cursor pointer
    height 1rem
    position relative
    transition fade
    user-select none
    width @height

  .dsk-circle-date
    color not-active-color
    font-family: Serif.font
    font-weight: Serif.weight.normal
    transition fade
    transform translateX(-1rem)

  // Active slide styles
  .active
    .dsk-circle
      background active-color
      background-clip padding-box

    .dsk-content
      opacity 1
      transition all 0s ease-in-out 0s

    .dsk-circle-date
      color active-color

  /*----------------------------------------------------------------*
   * Slide Transition Styles
   *----------------------------------------------------------------*/

  .zoom
    .dsk-content
      opacity 0
      transform scale(0.5)
      transition all 0s ease-in-out 0s

    &.active
      .dsk-content
        opacity 1
        transform scale(1)
        transition all 0.25s ease-in-out 0.25s

  .fade
    .dsk-content
      opacity 0
      transform scale(1)
      transition all 0s ease-in-out 0s

    &.active
      .dsk-content
        opacity 1
        transform scale(1)
        transition all 0.25s ease-in-out 0.25s

  .step
    position relative
    width 400px

  .dsk-nav
    position absolute
    right 10px
    top 30%
    user-select none
    width 30px

    span
      background url(img/prev.png) no-repeat center center rgba(255,255,255,.3)
      border-radius 3px
      box-shadow 0 1px rgba(255, 255, 255, 0.25) inset
      cursor pointer
      display inline-block
      height 30px
      margin 0 1px
      transition background-color 0.3s ease-in
      width 30px

      &:hover
        background-color rgba(255,255,255,.5)

    .dsk-pre
      border-radius 3px 0 0 3px

    .dsk-next
      border-radius 0 3px 3px 0
      background-image url(img/next.png)

    .dsk-autoplay
      background-image url(img/play.png)

    .playing
      background-image url(img/pause.png)

  .dsk-content
    bottom 6rem
    display table
    left -200px
    min-height 400px
    opacity 0
    pointer-events none
    position absolute
    width 800px

    +mobile()
      top -1000px

    +desktop()
      bottom 6rem
      min-height 400px
      width 1000px
      left -300px

  .no-image
    text-align center

  //
  // Edit slide typography here
  .dsk-info
    display table-cell
    padding-right 20px
    vertical-align middle
    width 50%

    +mobile()
      display table-row

    .date__heading
      margin 0 0 20px 0
      font-weight normal

    p
      font-size 1.25rem
      margin 0

  .dsk-year-info
    font-size 24px
    padding 10px

  img
    width 100%
    height auto

  .media
    display table-cell
    vertical-align middle
    height 500px
    width 50%

    +mobile()
      display table-row

